<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/Im_rst"
            android:layout_marginLeft="150dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

<EditText
    android:id="@+id/Et_Name"
    android:hint="Name"
    android:layout_below="@+id/Im_rst"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/Et_Email"
        android:hint="Email"
        android:layout_below="@+id/Et_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/Et_Password"
        android:layout_below="@+id/Et_Email"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/Et_Mobile"
        android:hint="Mobile"
        android:inputType="number"
        android:maxLength="10"
        android:layout_below="@+id/Et_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:id="@+id/Radiogrop"
        android:layout_below="@+id/Et_Mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/Rbtn_Male"
            android:text="Male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/Rbtn_Femal"
            android:text="Femal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RadioGroup>

<Button
    android:id="@+id/Btn_Rst"
    android:text="Register"
    android:layout_below="@+id/Radiogrop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/Btn_G_login"
        android:text="login"
        android:layout_below="@+id/Btn_Rst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="viewAll"
        android:onClick="viewAlldata"
        android:layout_below="@+id/Btn_G_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
</RelativeLayout>
